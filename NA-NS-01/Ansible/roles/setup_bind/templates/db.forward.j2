$ORIGIN {{ setup_bind_domain }}.
$TTL 300    ; 5 minutes
@       IN      SOA  ns.{{ setup_bind_domain }}. admin.{{ setup_bind_domain }}. (
                8          ; serial
                604800     ; refresh (1 week)
                86400      ; retry (1 day)
                2419200    ; expire (4 weeks)
                604800     ; minimum (1 week)
                )
; name server RR for the domain
           IN      NS      ns.{{ ansible_fqdn }}.

; domain hosts includes NS and MX records defined above

ns              A       10.220.150.3
pmx             A       10.220.150.1
